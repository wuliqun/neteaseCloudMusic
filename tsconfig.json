{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*":["node_modules/@types"],
      "CONFIG/*":["src/config/*"],
      "UTILS/*":["src/utils/*"],
      "CMT/*":["src/components/*"],
      "API/*":["src/api/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "types/**/*.ts", "types/**/*.d.ts"],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}
